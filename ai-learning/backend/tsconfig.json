{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "dist",
    "incremental": true,
    "strictNullChecks": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}